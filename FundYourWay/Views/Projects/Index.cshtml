@model IEnumerable<FundYourWay.Models.Project>

@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectDescription)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.CurrentFundingAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDescription)
        </td>
       
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ProjectId }) |
            @Html.ActionLink("Contribute", "contribute")
            @if (WebSecurity.IsCurrentUser(item.ProjectOwner.UserName))
            {
                Html.ActionLink("Edit", "Edit", new { id = item.ProjectId });
                
                Html.ActionLink("Delete", "Delete", new { id = item.ProjectId });
            }
            
        </td>
    </tr>
}

</table>
